<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <h2>Movie Country management table</h2>

    </div>
  </div>
  <!-- /. ROW  -->
  <hr />

  <div class="row">
    <div class="col-md-12">
      <a href="/admin/addCategory" class="btn btn-primary ml-auto">Thêm danh mục</a>
    </div>
  </div>
  <br />

  <div class="row">
    <div class="col-md-12">
      <!-- Advanced Tables -->

      <div class="panel panel-default">
        <div class="panel-heading">
          Advanced Tables
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Danh mục</th>
                  <th>Mô tả</th>
                  <th>Slug</th>
                  <th>Features</th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <td>{{this.nameCategory}}</td>
                  <td>{{this.description}}</td>
                  <td>{{this.slug}}</td>
                  <td>
                    <a href="/admin/editCategory/{{this._id}}" class="icon-box bg-warning set-icon btn btn-default">
                      <i class="fa fa-pencil fa-1x"></i>
                    </a>
                    <a type="button" class="icon-box bg-danger set-icon btn btn-default" data-id="{{id}}"
                      data-toggle="modal" data-target="#deleteUserModal">
                      <i class="fa fa-trash-o fa-1x"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

        </div>
      </div>
      <!--End Advanced Tables -->
    </div>
  </div>
</div>

{{! Conform delete }}
<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn chắc chắn muốn xóa?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button type="button" id="btn-delete-user" class="btn btn-danger">Xóa</button>
      </div>
    </div>
  </div>
</div>
<form name="formDel" method="POST" id="deleteForm"></form>

<script>
  var id; var deleteForm = document.forms['formDel']; var btnDeleteUser =
    $('#btn-delete-user'); console.log(id)
  $('#deleteUserModal').on('show.bs.modal', function (event) {
    var button =
      $(event.relatedTarget); id = button.data('id');
  });
  btnDeleteUser.click(function () { ////sử ở đây thành đường dẫn
    deleteForm.action = `/admin/deleteCategory/` + id; deleteForm.submit();
  });

  $('#category').addClass('active-menu');

</script>