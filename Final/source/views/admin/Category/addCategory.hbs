<div class="panel-body">
  <div class="row">
    <button class="btn btn-success" onclick="window.location.href='/admin/category'">Back</button>
    <div class="col-md-12">
      <h3 class="text-center text-primary h1">Thêm danh mục</h3>
      <form role="form" action="/admin/addCategory" method="post">
        <div class="form-group">
          <label for="nameCategory">Tên danh mục</label>
          <input class="form-control" name="nameCategory" id="slug" onkeyup="ChangeToSlug()" />
  
          <label for="description">Mô tả:</label>
          <input class="form-control" name="description" id="description" />

          <label for="slug">Slug:</label>
          <input class="form-control" name="slug" id="convert_slug" />
          {{#each errors}}
          <span class="control-label" style="color: red;">{{this.message}}</span>
          {{/each}}
        </div>
        <button type="submit" class="btn btn-primary">Thêm danh mục</button>
      </form>
    </div>
  </div>
</div>
<script>
  $('#category').addClass('active-menu');
</script>