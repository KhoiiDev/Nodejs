<div class="panel-body">
  <div class="row">
    <button class="btn btn-success" onclick="window.location.href='/admin/Country'">Back</button>
    <div class="col-md-12">
      <h3 class="text-center text-warning h1">Chỉnh sửa quốc gia</h3>
      <form action="/admin/editCountry/{{data._id}}" method="POST">
        <div class=" form-group">
          <label>Tên quốc gia </label>
          <input class="form-control" name="nameCountry" value="{{data.nameCountry}}" id="slug"
            onkeyup="ChangeToSlug()" />
          <label for="slug">Slug:</label>
          <input class="form-control" name="slug" value="{{data.slug}}" id="convert_slug" />
          {{#each errors}}
          <span class="control-label" style="color: red;">{{this.message}}</span>
          {{/each}}
        </div>
        <button type="submit" class="btn btn-warning">Cập nhật</button>
      </form>
    </div>
  </div>
</div>
<script>
  $('#Country').addClass('active-menu');
</script>