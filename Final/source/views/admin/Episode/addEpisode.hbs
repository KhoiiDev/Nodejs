<div class="panel-body">
  <div class="row">
    <button class="btn btn-success" onclick="window.location.href='/admin/episode'">Back</button>
    <div class="col-md-12">
      <h3 class="text-center text-primary h1">Thêm tập phim</h3>
      <form role="form" action="/admin/addEpisode" method="post">
        <div class="form-group ">
          <label for="nameEpisode">Tên tập phim</label>
          <input class="form-control" name="nameEpisode" id="slug" onkeyup="ChangeToSlug()" />

        </div>
        <div class="form-group ">
          <label for="slug">Slug:</label>
          <input class="form-control" name="slug" id="convert_slug" />
        </div>
        <div class="form-group">

          <label for="film">Thuộc phim:</label>
          <select class="form-control" name="film" id="film">
            {{#each filmEpisode}}
            <option value="{{this._id}}">{{this.nameFilm}}</option>
            {{/each }}
          </select>

        </div>

        <div class="form-group ">
          <label for="linkPhim">Link tập phim:</label>
          <input class="form-control" name="linkPhim" id="linkPhim" />
        </div>
        <div class="form-group ">
          <label for="episode">Tập:</label>
          <input class="form-control" name="episode" id="episode" />
        </div>

        {{#each errors}}
        <span class="control-label" style="color: red;">{{this.message}}</span>
        {{/each}}

        <button type="submit" class="btn btn-primary">Thêm tập phim</button>
      </form>
    </div>
  </div>
</div>

<script>
  $('#episode').addClass('active-menu');
</script>