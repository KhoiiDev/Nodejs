<div class="panel-body">
  <div class="row">
    <button class="btn btn-success" onclick="window.location.href='/admin/Genre'">Back</button>
    <div class="col-md-12">
      <h3 class="text-center text-warning h1">Chỉnh sửa thể loại</h3>
      <form role="form" action="/admin/editGenre/{{data._id}}" method="POST" onsubmit="return validateForm()">
        <div class="form-group">
          <label>Tên thể loại</label>
          <input class="form-control" name="nameGenre" value="{{data.nameGenre}}" id="slug" onkeyup="ChangeToSlug()" />

          <label for="slug">Slug:</label>
          <input class="form-control" name="slug" value="{{data.slug}}" id="convert_slug" />
          {{#each errors}}
          <span class="control-label" style="color: red;">{{this.message}}</span>
          {{/each}}
        </div>
        <button type="submit" class="btn btn-warning">Cập nhật</button>
      </form>
    </div>
  </div>
</div>
<script>
  $('#Genre').addClass('active-menu');
</script>